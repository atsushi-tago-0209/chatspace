.chat-main
  .chat-main__header
    .chat-main__header__left-box
      .chat-main__header__left-box__group
        = @group.name
      %ul.chat-main__header__left-box__member
        %li Member:
        - @group.users.each do |user| 
          %li #{user.name}
    = link_to "Edit", edit_group_path(@group) , class: "chat-main__header__right-box"
  .chat-main__messages
    .messages
      = render @messages 
  .chat-main__form
    .chat-main__form__input-box
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'text', placeholder: 'type a message'
        .chat-main__form__input-box__image
          = f.label :image, class: 'chat-main__form__input-box__message__image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'input-image'
        = f.submit 'Send', class: 'submit-btn'

