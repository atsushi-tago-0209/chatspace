  .chat-side__header
    .chat-side__header__box
      %p.chat-side__header__box__user
        = current_user.name
      .chat-side__header__box__menu
        = link_to new_group_path do
          = icon('fas', 'edit',class: 'icon')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')
  .chat-side__groups-list
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            = group.name
          .group__message
